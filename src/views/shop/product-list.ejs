<%- include('../common/head') %>
</head>
<body>
<%- include('../common/nav') %>
<main>
    <% if (products.length) { %>
        <h1>상품 목록</h1>
        <% for (let product of products) {%>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">
                        <%= product.title %>
                    </h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$
                        <%= product.price %>
                    </h2>
                    <p class="product__description">
                        <%= product.description %>
                    </p>
                </div>
                <div class="card__actions">
                    <a href="/product-detail/<%= product.id%>" class="btn">상세 보기</a>
                    <%- include('../common/add-to-cart', {product: product}) %>
                </div>
            </article>
        <% } %>
    <% } else { %>
        <h1> 등록된 상품이 없어 !!</h1>
    <%}%>
</main>
<%- include('../common/end') %>